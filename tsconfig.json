{
  "include": ["src"],
  "compilerOptions": {
    "baseUrl": ".",
    "alwaysStrict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "incremental": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "composite": true,
    "declaration": true,
    "outDir": "lib",
    "declarationDir": "lib/types",
    "moduleResolution": "node",
    "target": "ESNext"
  }
}
