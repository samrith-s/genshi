{
  "include": ["packages/**/*", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", ".rollup.cache", ".yarn"],
  "compilerOptions": {
    "module": "ESNext",
    "baseUrl": ".",
    "alwaysStrict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "incremental": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "composite": true,
    "declaration": true,
    "outDir": "lib",
    "declarationDir": "lib/types",
    "moduleResolution": "node",
    "target": "ESNext",
    "jsx": "react"
  }
}
